
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <form>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", class:"form-control", type:"email" %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-default" %>
        </div>
      </div>
    </div>
  </form>
<% end %>

<%= render "devise/shared/links" %>
