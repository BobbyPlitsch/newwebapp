<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <form>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class:"btn btn-default btn-sessions" %>
        </div>
        <% end %>
      </div>
    </div>
  </form>
<%= render "devise/shared/links" %>
